<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Classificador</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- agrupar para mobile -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Classificador', root_path, class: 'navbar-brand' %>
      </div>
    
      <!-- links da navbar -->
      <div class="collapse navbar-collapse navbar-main-collapse">
        <%= render 'layouts/navbar_default' if (!administrator_signed_in? && !medic_signed_in?) %>
        <%= render 'layouts/navbar_administrator' if administrator_signed_in? %>
        <%= render 'layouts/navbar_medic' if medic_signed_in? %>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <!-- /NAVBAR -->

  <!-- DEVISE ALERT -->
  <% if notice %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p><%= notice %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p><%= alert %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- /DEVISE ALERT -->

  <%= yield %>

  <!-- FOOTER -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <hr>
      </div>
      <% if administrator_signed_in? %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <p class="center">Guilherme Feitosa &copy; 2015</p>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <p class="center">guilhermefeitosa@gmail.com</p>
      </div>
      <% else %>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <p class="center">Guilherme Feitosa & PÃ¢mela Carvalho &copy; 2015</p>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <p class="center">
          <%= link_to new_administrator_session_path, title: 'Acesso restrito' do %>
            <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
          <% end %>
        </p>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <p class="center">guilhermefeitosa66@gmail.com; pamelacarvalho.si@gmail.com</p>
      </div>
      <% end %>
    </div>
  </div>
  <!-- /FOOTER -->
</body>
</html>