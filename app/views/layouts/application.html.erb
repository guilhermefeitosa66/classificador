<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Classificador</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- agrupar para mobile -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Classificador', root_path, class: 'navbar-brand' %>
      </div>
    
      <!-- links da navbar -->
      <div class="collapse navbar-collapse navbar-main-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Exemplo 1", "#" %></li>
          <li><%= link_to "Exemplo 2", "#" %></li>
          <li><%= link_to "Exemplo 3", "#" %></li>
          <li><%= link_to "Exemplo 4", "#" %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Exemplo<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">Exemplo 1</a></li>
              <li><a href="#">Exemplo 2</a></li>
              <li><a href="#">Exemplo 3</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <!-- /NAVBAR -->

  <%= yield %>

  <!-- FOOTER -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <hr>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <p class="center">Guilherme Feitosa &copy; 2015</p>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <p class="center">guilhermefeitosa@gmail.com</p>
      </div>
    </div>
  </div>
  <!-- /FOOTER -->
</body>
</html>