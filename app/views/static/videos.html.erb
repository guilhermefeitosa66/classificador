<div class="container">
  <div class="row">
    <% @videos.each do |video| %>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 well">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <h3><%= video.title %></h3>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= raw video.link %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= video.description %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>